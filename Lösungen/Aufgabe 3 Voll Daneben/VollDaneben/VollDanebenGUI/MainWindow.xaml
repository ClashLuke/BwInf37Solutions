                    <TextBlock x:Name="Expenditure" TextAlignment="Right" Text="2 $" Foreground="{DynamicResource Text}" VerticalAlignment="Center" Grid.Row="1" FontWeight="Bold"/>
                    <TextBlock x:Name="Total" TextAlignment="Right" Text="5 $" Foreground="{DynamicResource Text}" VerticalAlignment="Center" Grid.Row="2" FontWeight="Bold"/>

                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="22" Height="30" Width="80" Foreground="{DynamicResource Text}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
